<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <TextView
    android:id="@+id/task_card_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="TODO"
    android:textColor="#4C4A4A"
    android:textSize="20sp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="@+id/task_card_description"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="10dp"/>

  <TextView
    android:id="@+id/task_card_description"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="TextView"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/task_card_name"
    android:layout_marginLeft="20dp" />

  <Button
      android:id="@+id/task_card_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginRight="20dp"
      android:backgroundTint="#79C87D"
      android:text="Done"
      android:visibility="invisible"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <CheckBox
      android:id="@+id/task_card_checkbox"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="20dp"
      android:cursorVisible="false"
      android:minWidth="48dp"
      android:minHeight="48dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>